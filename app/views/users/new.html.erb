<% if false %>
    <form method="post" action="/users" accept-charset="UTF-8">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <label for="username">Логин</label>
        <input id="username" name="user[username]" type="text">

        <label for="email">Email</label>
        <input id="email" name="user[email]" type="text">

        <label for="password">Пароль</label>
        <input id="password" name="user[password]" type="password">

        <button type="submit">Submit</button>
    </form> 
<% end %>

<% if true %>
    <%= form_tag("/users") do %>
        <%= label_tag "user[username]", "Логин" %>
        <%= text_field_tag "user[username]" %>

        <%= label_tag "user[email]", "Email" %>
        <%= text_field_tag "user[email]" %>

        <%= label_tag "user[password]", "Пароль" %>
        <%= password_field_tag "user[password]" %>

        <%= submit_tag %>
    <% end %>
<% end %>
